<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".ui.main.MainFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/headerLayout">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/settings"
            android:id="@+id/settingsImage"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Browse"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_below="@+id/settingsImage"
            android:id="@+id/browseText"
            android:textColor="#000000"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_below="@+id/browseText"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:id="@+id/noteBooksContainer"
        android:layout_below="@+id/headerLayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:id="@+id/noteBooksLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notebooks"
                android:id="@+id/notebooksText"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show All"
                android:textSize="16sp"
                android:layout_alignParentRight="true"
                android:id="@+id/showAllNoteBooksText"
                android:textColor="@color/majorColor"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/noteBooksLayout">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/book1Layout"
                android:paddingRight="15dp"
                >
                <RelativeLayout
                    android:layout_width="110dp"
                    android:layout_height="150dp"
                    android:id="@+id/book1LayoutImg"
                    android:background="@xml/new_book_border">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/addnew"
                        android:layout_centerInParent="true"
                        android:id="@+id/addNew"/>

                </RelativeLayout>
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Create Notebook"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:paddingTop="5dp"
                    android:layout_alignParentLeft="@+id/book1LayoutImg"
                    android:layout_alignParentRight="@+id/book1LayoutImg"
                    android:textAlignment="center"
                    android:layout_below="@+id/book1LayoutImg"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/book2Layout"
                android:layout_toRightOf="@+id/book1Layout"
                android:paddingRight="15dp"
                >
                <RelativeLayout
                    android:layout_width="110dp"
                    android:layout_height="150dp"
                    android:id="@+id/book2LayoutImg"
                    android:background="@xml/book_border">
                    <View
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:background="#ffffff"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="12dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- - -"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10dp"
                        />
                </RelativeLayout>
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Weekend plans"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:paddingTop="5dp"
                    android:layout_alignParentLeft="@+id/book2LayoutImg"
                    android:layout_alignParentRight="@+id/book2LayoutImg"
                    android:textAlignment="center"
                    android:layout_below="@+id/book2LayoutImg"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/book2Layout"
                android:id="@+id/book3Layout"
                >
                <RelativeLayout
                    android:layout_width="110dp"
                    android:layout_height="150dp"
                    android:id="@+id/book3LayoutImg"
                    android:background="@xml/book_border">
                    <View
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:background="#ffffff"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="12dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- - -"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10dp"
                        />
                </RelativeLayout>
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="TODO"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:paddingTop="5dp"
                    android:layout_alignParentLeft="@+id/book3LayoutImg"
                    android:layout_alignParentRight="@+id/book3LayoutImg"
                    android:textAlignment="center"
                    android:layout_below="@+id/book3LayoutImg"
                    />
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_below="@+id/noteBooksContainer">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:id="@+id/notesLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notes"
                android:id="@+id/notesText"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show All"
                android:textSize="16sp"
                android:layout_alignParentRight="true"
                android:id="@+id/showAllNotesText"
                android:textColor="@color/majorColor"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/notesLayout"
            android:text="List of note items goes here with card design"
            android:textSize="16sp"
            android:paddingTop="40dp"
            android:textAlignment="center"
            android:textColor="#000000"
            />

    </RelativeLayout>


</RelativeLayout>
